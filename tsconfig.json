{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "strict": true,
    "baseUrl": "",
    "paths": {
        "@al/common": [ "./src" ],
        "@al/common/*": [ "./src/*" ]
    },
    "outDir": "./dist/commonjs",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declarationDir": "./dist/typings/",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
